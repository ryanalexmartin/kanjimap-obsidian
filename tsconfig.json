{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "lib": ["DOM", "ES6", "ES2017"],
      "allowJs": true,
      "outDir": ".",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"]
  }